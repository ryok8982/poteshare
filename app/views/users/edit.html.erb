
<%= form_for @user do |f| %>
<div class="card-header bg-transparent font-weight-bold">
    <h1 class="loginTitle font-weight-bold">編集</h1>
    </div>
<div class="card-body loginContainer">

<div class="field">
<%= f.label :username %><br />
<%= f.text_field :username %>

<div class="field">
<%= f.label :email %><br />
<%= f.text_field :email %>
</div>

<div class="field">
<%= f.label :profile %><br />
<%= f.text_field :profile %>
</div>

<div class="field">
<%= f.label :profile %><br />
<%= f.text_area :profile %>
</div>

<div class="field">
<%= f.label :profile_image %><br />
<%= f.attachment_field :profile_image %>
</div>

<div class="actions">
<%= f.submit "更新" %>
</div>

<% end %>

